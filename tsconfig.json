{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowJs": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
